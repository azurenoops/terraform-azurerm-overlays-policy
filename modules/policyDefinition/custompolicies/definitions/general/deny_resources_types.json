{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "deny_resources_types",
    "properties": {
        "displayName": "Deny resources types",
        "description": "Denies the deployment of resources of a specific type.",
        "metadata": {
            "version": "1.0.0",
            "category": "General",
            "source": "https://github.com/AzureNoOps/",
            "anoaCloudEnvironments": [
              "AzureCloud",          
              "AzureUSGovernment"
            ]
        },
        "parameters": {
            "listOfResourceTypesNotAllowed": {
                "type": "Array",
                "metadata": {
                    "description": "The list of resource types that cannot be deployed.",
                    "displayName": "Disallowed resources",
                    "strongType": "resourceTypes"
                }                
            },
            "effect": {
                "type": "String",
                "defaultValue": "Audit",
                "allowedValues": [
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "metadata": {
                    "displayName": "Effect",
                    "description": "The effect determines what happens when the policy rule is evaluated to match"
                }
            }
        },
        "policyRule": {
            "if": {
                "field": "type",
                "in": "[parameters('listOfResourceTypesNotAllowed')]"
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}
